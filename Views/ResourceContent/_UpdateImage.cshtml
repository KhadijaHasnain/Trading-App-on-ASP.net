@model ResourceContent

@{
  string dir = "ltr";
  if (Model.Language == Language.Arabic || Model.Language == Language.Persian)
  {
    dir = "rtl";
  }
}

<div class="modal fade" id="locEditModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <!-- Modal Header -->
      <div class="modal-header">
        <p class="modal-title">Change Image</p>
        <button type="button" class="close" onclick="closeAndRemoveModel('#locEditModal')">&times;</button>
      </div>
      <form id="loc-form">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Language" />
        <input type="hidden" asp-for="Position" />
        <input type="hidden" asp-for="Type" value="@Model.Type" />
        <input type="hidden" asp-for="Text" />
        <div class="modal-body mx-3">
          <div class="custom-file mb-3">
            <label for="uploadSvgInput" class="form-label">Upload Image:</label>
            <input class="form-control" type="file" id="uploadImageInput" accept="image/*" onchange="uploadImage(this)">
          </div>
          <div class="form-group">
            <label for="sel1">Select list:</label>
            <select class="form-control" id="extension">
              <option value="jpg" selected>JPG (recommended)</option>
              <option value="png">PNG</option>
            </select>
          </div>
          <div class="priview">
            <div class="svg" id="imagePreview">
              @if (Model.Text.HasValue())
              {
                <img src="@Model.Text" class="img-fluid" />
              }
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" onclick="locSave(this)" localize-content>Save</button>
          <button type="button" class="btn" data-dismiss="modal" onclick="closeAndRemoveModel('#locEditModal')" localize-content>Cancel</button>
        </div>
      </form>
    </div>
  </div>
</div>